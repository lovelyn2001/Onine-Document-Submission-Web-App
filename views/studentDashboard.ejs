<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <% if (flashMessage.length > 0) { %>
            <div class="alert alert-success">
                <%= flashMessage[0] %>
            </div>
        <% } %>
        <h1>Upload Your Documents</h1>
        <form action="/student/upload/<%= student._id %>" method="POST" enctype="multipart/form-data">

            <!-- WAEC/NECO Result -->
            <div class="file-upload">
                <label for="waec">WAEC/NECO Result:</label>
                <input type="file" id="waec" name="waec" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- JAMB Result -->
            <div class="file-upload">
                <label for="jamb">JAMB Result:</label>
                <input type="file" id="jamb" name="jamb" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Offer of Provisional Admission -->
            <div class="file-upload">
                <label for="admission">Offer of Provisional Admission:</label>
                <input type="file" id="admission" name="admission" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Post-UTME Screening Result -->
            <div class="file-upload">
                <label for="post_utme">Post-UTME Screening Result:</label>
                <input type="file" id="post_utme" name="post_utme" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Acceptance Fee Receipt -->
            <div class="file-upload">
                <label for="acceptance_fee">Acceptance Fee Receipt:</label>
                <input type="file" id="acceptance_fee" name="acceptance_fee" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- JAMB Admission Letter -->
            <div class="file-upload">
                <label for="jamb_admission_letter">JAMB Admission Letter:</label>
                <input type="file" id="jamb_admission_letter" name="jamb_admission_letter" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- First School Leaving Certificate -->
            <div class="file-upload">
                <label for="first_school_leaving">First School Leaving Certificate:</label>
                <input type="file" id="first_school_leaving" name="first_school_leaving" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- School Fees Receipt -->
            <div class="file-upload">
                <label for="school_fees">School Fees Receipt:</label>
                <input type="file" id="school_fees" name="school_fees" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- SUG Receipt -->
            <div class="file-upload">
                <label for="sug_receipt">SUG Receipt:</label>
                <input type="file" id="sug_receipt" name="sug_receipt" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- NACOSS Receipt/Certificate -->
            <div class="file-upload">
                <label for="nacoss_receipt">NACOSS Receipt/Certificate:</label>
                <input type="file" id="nacoss_receipt" name="nacoss_receipt" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Accommodation Fee Receipt -->
            <div class="file-upload">
                <label for="accommodation_fee">Accommodation Fee Receipt:</label>
                <input type="file" id="accommodation_fee" name="accommodation_fee" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Acceptance of Offer of Admission -->
            <div class="file-upload">
                <label for="acceptance_offer">Acceptance of Offer of Admission:</label>
                <input type="file" id="acceptance_offer" name="acceptance_offer" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Pledge -->
            <div class="file-upload">
                <label for="pledge">Pledge:</label>
                <input type="file" id="pledge" name="pledge" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Departmental Clearance Form -->
            <div class="file-upload">
                <label for="departmental_clearance">Departmental Clearance Form:</label>
                <input type="file" id="departmental_clearance" name="departmental_clearance" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Provisional Clearance Form -->
            <div class="file-upload">
                <label for="provisional_clearance">Provisional Clearance Form:</label>
                <input type="file" id="provisional_clearance" name="provisional_clearance" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Birth Certificate/Age Declaration -->
            <div class="file-upload">
                <label for="birth_certificate">Birth Certificate/Age Declaration:</label>
                <input type="file" id="birth_certificate" name="birth_certificate" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Local Government Area Declaration -->
            <div class="file-upload">
                <label for="lga_declaration">Local Government Area Declaration:</label>
                <input type="file" id="lga_declaration" name="lga_declaration" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Letter of Attestation -->
            <div class="file-upload">
                <label for="attestation_letter">Letter of Attestation:</label>
                <input type="file" id="attestation_letter" name="attestation_letter" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Medical Certification -->
            <div class="file-upload">
                <label for="medical_certification">Medical Certification:</label>
                <input type="file" id="medical_certification" name="medical_certification" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Matriculation Oath -->
            <div class="file-upload">
                <label for="matriculation_oath">Matriculation Oath:</label>
                <input type="file" id="matriculation_oath" name="matriculation_oath" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Course Registration Form -->
            <div class="file-upload">
                <label for="course_registration">Course Registration Form:</label>
                <input type="file" id="course_registration" name="course_registration" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Bio-data Form -->
            <div class="file-upload">
                <label for="biodata_form">Bio-data Form:</label>
                <input type="file" id="biodata_form" name="biodata_form" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Online WAEC Verification Result -->
            <div class="file-upload">
                <label for="waec_verification">Online WAEC Verification Result:</label>
                <input type="file" id="waec_verification" name="waec_verification" accept="image/jpeg, image/png, application/pdf, .docx, .doc" required>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="upload-btn">Upload Files</button>
        </form>

        <!-- Back Button -->
        <a href="/" class="back-btn">Back to Home</a>
    </div>
</body>
</html>
